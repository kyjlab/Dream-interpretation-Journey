<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/home_fragment"
    android:padding="24dp">

    <TextView
        android:id="@+id/home_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="100dp"
        android:text="Dream Journey"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/home_text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="48dp"
        android:text="무슨 꿈을 꾸셨나요?"
        android:textColor="@color/gray"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_text_title" />

    <Button
        android:id="@+id/home_btn_writeJourney"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/btn_green"
        android:text="오늘의 일기 쓰기"
        android:textColor="@color/white"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_text_subtitle" />

    <Button
        android:id="@+id/home_btn_interpretation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="내 꿈 해석 보기"
        android:textColor="@color/white"
        android:backgroundTint="@color/btn_green"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_btn_writeJourney"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/home_text_or"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="또는"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/home_btn_interpretation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/home_btn_viewCalendar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="달력 보기"
        android:textColor="@color/btn_green"
        android:backgroundTint="@color/btn_light_gray"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_text_or"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/home_btn_settings"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textColor="@color/btn_green"
        android:backgroundTint="@color/btn_light_gray"
        app:cornerRadius="16dp"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/home_btn_viewCalendar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
